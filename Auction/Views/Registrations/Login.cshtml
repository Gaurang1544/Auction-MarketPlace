@model Auction.Models.Registration
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* General styles */
        @@media (max-width: 992px) {
            .col-md-2 {
                width: 50%; /* Set width to 50% for 2 items per row on smaller screens */
            }
        }

        @@media (max-width: 768px) {
            .col-md-2 {
                width: 100%; /* Set width to 100% for 1 item per row on extra small screens */
            }
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fa;
            color: #333;
            margin: 0;
        }

        .container {
            max-width: 500px;
            margin: 50px auto;
            height: calc(100% - 40px);
            overflow-y: hidden;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 0px 4px rgba(0, 0, 0, 0.5);
        }

        .card-body {
            padding: 30px;
        }

        /* Radio button styles */
        .wrapper {
            display: flex;
            height: 45px;
            margin-bottom: 20px;
        }

            .wrapper .option {
                flex-grow: 1;
                display: flex;
                align-items: center;
                justify-content: center;
                cursor: pointer;
                background-color: #fff;
                border: 2px solid lightgrey;
                border-radius: 8px;
                transition: all 0.3s ease;
            }

                .wrapper .option:hover {
                    background-color: #f0f0f0;
                }

        input[type="radio"] {
            display: none;
        }

        #option-1:checked ~ .option-1,
        #option-2:checked ~ .option-2 {
            border-color: #007bff;
            background-color: #007bff;
            color: #fff;
        }

        .option span {
            margin-left: 5px;
        }

        /* Form styles */
        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ccc;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: #007bff;
                outline: none;
            }

        .btn-success {
            width: 100%;
            padding: 10px;
            border-radius: 8px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-success:hover {
                background-color: #0056b3;
            }

        .mt-3 {
            margin-top: 20px;
        }

            .mt-3 a {
                color: #007bff;
                text-decoration: none;
            }

                .mt-3 a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <h1 class="text-primary text-center">Login Here</h1>
    <div class="container">
        <div class="card">
            <div class="card-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                }
                @using (Html.BeginForm("Login", "Registrations", FormMethod.Post))
                {
                    <div class="wrapper">
                        <input type="radio" name="select" id="option-1" value="Customer" checked>
                        <label for="option-1" class="option option-1">
                            <div class="dot"></div><span>Customer</span>
                        </label>
                        <input type="radio" name="select" id="option-2" value="Admin">
                        <label for="option-2" class="option option-2">
                            <div class="dot"></div><span>Admin</span>
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" name="Email" placeholder="abc@gmail.com" required />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="Password" placeholder="****" required />
                    </div>
                    <button class="btn btn-success">Login</button>
                }
                <p class="mt-3"> Not registered? -- @Html.ActionLink("Create an account", "Create", "Registrations") </p>
            </div>
        </div>
    </div>
</body>
</html>
