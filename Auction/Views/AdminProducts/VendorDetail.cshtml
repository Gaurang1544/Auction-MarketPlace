@model Auction.Models.Registration
@using PagedList.Mvc
@using PagedList
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="Vendor_detail_main">
        <div class="text-center">
            <div class="circle-01">
                <img src="~/Images/24be7545-aa41-4d3c-877a-592722bef41b_CAR.jpg" class="image1" />
            </div>
            <b style="font-size:30px">@Model.First_Name</b><br />
            <h4><i class="fas fa-mobile-alt" style="color:#2695ff"></i> @Model.Mobile</h4>
            <h4><i class="fas fa-map-marker-alt" style="color:#2695ff"></i> @Model.Address</h4>
        </div>

        <div class="Vendor_detail_card2">
            <h4 style="color:#808080">Products</h4>
        </div>

        <div class="row">
            @foreach (var item in ViewBag.PagedList)
            {
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 product-item">
                    <div>
                        <img src="@Url.Content("~/ProductImage/" + item.Image1)" class="A-Image1" />
                    </div>
                    <div class="product-item-2">
                        <span style="font-size:90%; white-space: nowrap;">@item.Name</span>
                        <p style="font-size:17px;font-weight:100">Base Price: <b>&#8377;@item.Price</b></p>
                    </div>
                </div>
            }
        </div>

        @Html.PagedListPager((IPagedList<Auction.Models.CustProduct>)ViewBag.PagedList, page => Url.Action("VendorDetail", "AdminProducts", new { page = page, search = Request.QueryString["search"] }))
    </div>
</body>
</html>

<style>
    .Vendor_detail_main {
        padding: 20px;
    }

    .Vendor_detail_card2 {
        width: 100%;
        background: #ffffff;
        padding: 10px;
        margin: 10px 0;
        text-align: center;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
    }

    .image1 {
        height: 50px;
        width: 50px;
        border-radius: 50%;
        background: #808080;
        margin: 7.5px auto;
    }

    .circle-01 {
        height: 65px;
        width: 65px;
        background: #ffffff;
        text-align: center;
        border-radius: 50%;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
        margin: 10px auto;
    }

    .product-item {
        background: #ffffff;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
        margin-bottom: 15px;
    }

    .product-item img {
        display: block;
        margin: 0 auto;
        max-width: 100%;
        height: auto; /* Maintain aspect ratio */
        padding: 10px;
    }

    .product-item-2 {
        margin: 5px 0;
        border-top: 1px solid #c3c3c3;
        text-align: center;
        font-size: 20px;
    }

    @@media (max-width: 768px) {
        .circle-01 {
            height: 50px;
            width: 50px;
        }

        .image1 {
            height: 40px;
            width: 40px;
        }
    }

    @@media (max-width: 576px) {
        .product-item {
            width: 90%; /* Full width on small screens */
        }
    }
</style>
